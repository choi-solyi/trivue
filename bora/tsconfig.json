{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2015",
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "removeComments": true,
    // "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "typeRoots": ["node_modules/@types", "src/assets/image.type.ts",],
    "jsx": "react-jsx",
    "allowImportingTsExtensions":true
  },
  "include": ["./src/**/*", "@type"]
}
